<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Sign in to continue,</h3>
            {{#if error}}
                <div class="text-danger mb-2  d-flex justify-content-center " style="background-color:rgb(254, 181, 181);height:50px;border-radius: 5px;">
                  <p class="mt-3">{{error}}</p>
                  </div>
              {{/if}}
          <form action="/login" method="post">
            <div class="form-outline mb-4">
              <input type="text" id="name" name="name" class="form-control form-control-lg"   required minlength="3" maxlength="8" placeholder="Username"/>
            </div>

            <div class="form-outline mb-4">
              <input type="password" id="password" name="password" class="form-control form-control-lg"required minlength="3" maxlength="10" placeholder="Password"/>
            </div>

            <!-- Checkbox -->

            <button class="btn  btn-lg btn-block btn-primary" type="submit" style="width:100%;">Login</button>

</form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>