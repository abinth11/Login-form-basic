<div class="container-fluid p-5 ">
    <div class="row">
        {{#each products}}

<!-- Card deck -->
<div class="card-deck col-md-4 " style="width: 280px;object-fit: cover;">

  <!-- Card -->
  <div class="card mb-4 mx-2">

    <!--Card image-->
    <div class="view overlay">
      <img class="card-img-top" src="{{image}}"
        alt="Card image cap" style="width:100%;height: 200px;">
      <a href="#!">
        <div class="mask rgba-white-slight"></div>
      </a>
    </div>

    <!--Card content-->
    <div class="card-body">

      <!--Title-->
      <h4 class="card-title">{{brand}}  {{model}}</h4>
      <!--Text-->
      <p class="card-text">{{description}}</p>
      <p class="card-text">{{price}}</p>


      <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
      <button type="button" class="btn btn-primary btn-md">Buy now</button>

    </div>

  </div>

</div>
<!-- Card deck -->

{{/each}}

    </div>
</div>


